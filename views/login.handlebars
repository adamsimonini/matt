<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-6" style="text-align: center;"> <br />
            <h1 class="title">CodWeb</h1> <br />
            <img id="coding-image" src="/public/imgs/coding.png">
        </div>
        <div class="col-lg-4 col-md-6"> <br />
            <div style="text-align: center;">
                <h1>Welcome</h1>
                <h5>Dont have an account? <a href="#" id="sign-up">Sign Up</a>!</h5> <br />
            </div>
            <form action="/api/auth/signin" method="POST" class="login">
                <div class="form-group">
                    <h4>Username: </h4>
                    <input type="text" class="form-control nospace" id="username" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <h4>Password: </h4>
                    <input type="password" class="form-control nospace" id="password" name="password" placeholder="Password">
                </div>
                <h6>Forgot <a id="forgot" href="#">Username/Password</a>?</h6> <br />
                <button type="submit" class="btn btn-outline-info" id="login">Login</button>
                {{#if message}}
                <h6 class="alert alert-danger mt-4">{{message}}</h6>
                {{/if}}
                {{#if feedback}}
                <h6 class="alert alert-success mt-4">{{feedback}}</h6>
                {{/if}}
            </form>
            <br />
            <div style="text-align: center;">
                <h3>Or login with
                    <a href="#"><i class="fab fa-google"></i></a> / 
                    <a href="#"><i class="fab fa-facebook-square"></i> </a>
                </h3>
            </div>
        </div>
    </div>
</div>
<script> document.title = "CodWeb Login" </script>